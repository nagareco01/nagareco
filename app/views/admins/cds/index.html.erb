<h2 class="genre_name">オールジャンル</h2>
<ul class="bxslider">
	<% @cds.each do |cd| %>
		<li class="object">
			<%= link_to admins_cd_path(cd.id) do %>
			<div class="image"><%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpg" ,:size =>'60x60' %></div>
			<div><%= cd.artist.artist_name %></div>
			<div><%= cd.name %></div>
			<% end %>
		</li>
    <% end %>
</ul>

<% @genres.each do |genre| %>
	<div class="way">
	<h2 class="genre_name"><%= genre.genre_name %></h2>
	<ul class="bxslider">
		<% genre.cds.each do |cd| %>
			<li class="object">
				<%= link_to admins_cd_path(cd.id) do %>
					<div class="image"><%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpg" ,:size =>'60x60' %></div>
					<div><%= cd.artist.artist_name %></div>
			    	<div><%= cd.name %></div>
				<% end %>
			</li>
    	<% end %>
	</ul>
	</div>
<% end %>

