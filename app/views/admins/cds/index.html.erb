<div class="main">
	<script>
		$(function(){
			$('.slide').slick({
				accessibility: true,
                autoplay: true,
                autoplaySpeed: 2000,
                fade: true,
                arrows: false,
                infinite: true,
            });
		});
	</script>
	<ul class="slide">
		<li><%= image_tag 'nagano15.jpg', :size => '500x500'%></li>
		<li><%= image_tag 'nagano12.jpg', :size => '500x500'%></li>
		<li><%= image_tag 'nagano7.jpg', :size => '500x500'%></li>
		<li><%= image_tag 'nagano8.jpg', :size => '500x500'%></li>
		<li><%= image_tag 'nagano14.jpg', :size => '500x500'%></li>
		<li><%= image_tag 'nagano10.jpg', :size => '500x500'%></li>
	</ul>
	<p>長野県出身アーティストを集めたECサイト</p>
</div>

<h2 class="genre_name">ジャンル</h2>
<ul class="bxslider">
	<% @cds.each do |cd| %>
		<li class="object">
			<%= link_to admins_cd_path(cd.id) do %>
			<div class="image"><%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpg" ,:size =>'60x60' %></div>
			<div><%= cd.artist.artist_name %></div>
			<div><%= cd.name %></div>
			<% end %>
		</li>
    <% end %>
</ul>

<% @genres.each do |genre| %>
	<div class="way">
	<h2 class="genre_name"><%= genre.genre_name %></h2>
	<ul class="bxslider">
		<% genre.cds.each do |cd| %>
			<li class="object">
				<%= link_to admins_cd_path(cd.id) do %>
					<div class="image"><%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpg" ,:size =>'60x60' %></div>
					<div><%= cd.artist.artist_name %></div>
			    	<div><%= cd.name %></div>
				<% end %>
			</li>
    	<% end %>
	</ul>
	</div>
<% end %>

<span id="back">
	<a href="#">
		<%= image_tag "arrow.png"  %>
	</a>
</span>