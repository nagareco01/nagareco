<div class="main">
	<script>
		jQuery(window).load(function(){
			$('.slide').bxSlider({
				mode:"fade",
				auto: true,
		        speed: 1000,
		        moveSlide: 1,
		        pause: 6000,
		        minSlides: 1,
		        maxSlides: 1,
		        slideWidth: 1000,
		        pager:false,
		        randomStart: true,
		        autoHover: true,
		        touchEnabled: false
		    });
		});
	</script>
	<ul class="slide">
		<li><%= image_tag 'nagano1.jpg', :size => '500x500'%></li>
		<li><%= image_tag 'nagano2.jpeg', :size => '500x500'%></li>
	</ul>
	<p>長野県出身アーティストを集めたECサイト</p>
</div>

<h2 class="genre_name">ジャンル</h2>
<ul class="bxslider">
	<% @cds.each do |cd| %>
		<li class="object">
			<%= link_to clients_cd_path(cd.id) do %>
			<div class="image"><%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpg" ,:size =>'60x60' %></div>
			<div><%= cd.artist.artist_name %></div>
			<div><%= cd.name %></div>
			<% end %>
		</li>
    <% end %>
</ul>

<% @genres.each do |genre| %>
	<div class="way">
	<h2 class="genre_name"><%= genre.genre_name %></h2>
	<ul class="bxslider">
		<% genre.cds.each do |cd| %>
			<li class="object">
				<%= link_to clients_cd_path(cd.id) do %>
					<div class="image"><%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg', fallback: "noimage.jpg" ,:size =>'60x60' %></div>
					<div><%= cd.artist.artist_name %></div>
			    	<div><%= cd.name %></div>
				<% end %>
			</li>
    	<% end %>
	</ul>
	</div>
<% end %>

<span id="back">
	<a href="#">
		<%= image_tag "arrow.png"  %>
	</a>
</span>

