<h1>検索結果</h1>

<% @search_cds.each do |cd| %>

  <%= link_to clients_cd_path(cd.id) do %>
	<%= attachment_image_tag cd, :image, :fill, 40, 40, format: 'jpeg' ,fallback: "noimage.jpg" ,:size =>'40x40' %>
  <% end %>

  <p><%= link_to cd.name, clients_cd_path(cd.id) %></p>
  <p><%= cd.artist.artist_name %></p>
  <p>¥<%= cd.price %></p>

<% end %>

<%= paginate @search_cds %>