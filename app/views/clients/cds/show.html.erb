<div class="title">
        <h2>商品詳細</h2>
        <div class="show-items">
                <div class="show-items row">
                        <div class="col-sm-5">
                                <div class="show-item">
                                        <%= attachment_image_tag @cd, :image, :fill, 40, 40, format: 'jpeg' ,fallback: "noimage.jpg" ,:size =>'400x400' %>
                                </div>
                                <div class="show-item">
                                        <h4>説明文</h4>
                                        <div class="show-info-item">
                                                <%= @cd.description %>
                                        </div>
                                </div>
                        </div>
                        <div class="col-sm-7 show-box2">
                                <div class="show-item">
                                        <h4>アーティスト名</h4>
                                        <div class="show-info-item">
                                                <%= @cd.artist.artist_name %>
                                        </div>
                                </div>
                                <div class="show--item">
                                        <h4>CD名</h4>
                                        <div class="show-info-item">
                                                <%= @cd.name %>
                                        </div>
                                </div>
                                <div class="show-item">
                                        <h4>曲名</h4>
                                        <div class="show-info-item">
                                                <% @cd.discs.each do |disc| %>
                                                         <div>
                                                                Disc.<%= disc.disc_number %>
                                                         </div>
                                                        <% disc.songs.each do |song| %>
                                                        <div class="show-song-number">
                                                                <%= song.song_number %>.
                                                                <%= song.song_name %>
                                                        </div>
                                                        <% end %>
                                                <% end %>
                                        </div>
                                </div>
                                <div class="show-item">
                                        <h4>ジャンル</h4>
                                        <div class="show-info-item">
                                                <%= @cd.genre.genre_name %>
                                        </div>
                                </div>
                                <div class="show-item">
                                        <h4>レーベル名</h4>
                                        <div class="show-info-item">
                                                <%= @cd.label.label_name %>
                                        </div>
                                </div>
                                <div class="show-item">
                                        <h4>在庫</h4>
                                        <div class="show-info-item">
                                                <% if @cd.stock <= 0 %>
                                                <%= "✖" %>
                                                <% else %>
                                                <%= @cd.stock %>
                                                <% end %>
                                         </div>
                                 </div>
                                 <div class="show-item">
                                        <h4>ステータス</h4>
                                        <div class="show-info-item">
                                                <% if @cd.stock <= 0 %>
                                                <%= "販売停止" %>
                                                <% else %>
                                                <%= @cd.sale_status %>
                                                <% end %>
                                        </div>
                                 </div>
                                 <div class="show-item">
                                        <h4>税込価格</h4>
                                        <div class="show-info-item">
                                                <%= (@cd.price*1.08).floor %>
                                        </div>
                                </div>
                                <div class="show-item">
                                        <h4>購入枚数</h4>
                                        <div class="show-info-item">
                                                <%= form_for @item, url: clients_items_add_item_path do |f| %>
                                                <%= f.hidden_field :cd_id, value: params[:id] %>
                                                <%= f.number_field :quantity, required:true, min:"1" %>
                                                <%= f.submit "カート追加" %>
                                                <% end %>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>
</div>