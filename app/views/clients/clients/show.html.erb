<div class="show_all">
<h2>My page<span><h4><%= flash[:client_update] %></h4></span></h2>
<h4>氏名 <%= @client.last_name %> <%= @client.first_name %></h4>
<h4>電話番号　<%= @client.telephone%></h4>
<h4>自宅郵便番号　<%= @client.post_code%></h4>
<h4>自宅住所　<%= @client.address%></h4>
<h4>メールアドレス　<%= @client.email%></h4>

<% unless @address == [] %>

<h4>登録住所</h4>

<div class="create-address">
	<h4><!-- 文字の大きさのため、あとでcssで調整 -->
		<div class="container">
		<div class="row">
		<table class="col-lg-6 table table-striped">
			<thead class="row">
				<tr>
					<th>氏名</th>
				    <th>郵便番号</th>
				    <th>住所</th>
			    </tr>
		    </thead>
		    <% @address.each do |address| %>
		    <tbody>
		    	<tr>
		    		<td><%= address.last_name %> <%= address.first_name %></td>
				    <td><%= address.sub_post_code %></td>
				    <td><%= address.sub_address %></td>
				    <td><%= link_to"削除", clients_remove_address_path(address.id), method: :delete,  "data-confirm" => "削除しますか？", class:"btn btn-danger"%></td>
			    </tr>
			<% end %>
		    </tbody>
	    </table>
		</div>
		</div>
    </h4>
</div>

<% end %>


<%= link_to"注文履歴一覧",clients_order_index_path(@client)%>
<%= link_to"Mypage編集",edit_clients_client_path(@client)%>
<%= link_to"住所新規登録",new_clients_client_path(id: @client.id)%>

<%= link_to"退会",clients_client_path(@client.id),method: :delete, "data-confirm" => "退会しますか？"%>
</div>