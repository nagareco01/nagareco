<div class="title">
	<h2 class="space">住所新規登録</h2>
	<%= flash[:danger] %>
	<%= form_for @address, :url => {:action => :create} do |f| %>
		<div class="info-items">
			<h4>・氏名</h4>
			<div class="text-fields-box">
				<%= f.text_field :last_name, :size=>"10", placeholder:"姓", class: "text-field name" %><%= f.text_field :first_name, :size=>"10", placeholder:"名", class: "text-field name" %>
			</div>
		</div>
		<div class="info-items">
			<h4>・郵便番号</h4>
			<div class="text-fields-box">
				<%= f.text_field :sub_post_code, :size=>"25", placeholder:"半角英数字　ハイフンあり", class: "text-field" %>
			</div>
		</div>
		<div class="info-items">
			<h4>・住所</h4>
			<div class="text-fields-box">
				<%= f.text_field :sub_address, :size=>"60", class: "text-field" %>
			</div>
		</div>
		<div class="client-update-botton">
			<%= f.submit "追加", class: "btn btn-primary btn-lg btn-block" %>
		</div>
	</div>
	<% end %>

</div>